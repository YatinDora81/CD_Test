name: Multi-Environment Workflow

on:
  workflow_dispatch:
    inputs:
      environment:
        description: "Choose environment"
        required: true
        default: staging
        type: choice
        options:
          - staging
          - prod

jobs:
  staging:
    if: ${{ inputs.environment == 'staging' }}
    runs-on: ubuntu-latest
    environment: staging

    steps:
      - name: Echo Staging Environment
        run: echo "Running in STAGING environment"
      
      - name: Print Staging Secret
        run: echo "Staging secret is: ${{ secrets.SECRET_MESSAGE }}"

  prod:
    if: ${{ inputs.environment == 'prod' }}
    runs-on: ubuntu-latest
    environment: prod

    steps:
      - name: Echo Production Environment
        run: echo "Running in PRODUCTION environment"
      
      - name: Print Production Secret
        run: echo "Production secret is: ${{ secrets.SECRET_MESSAGE }}"
